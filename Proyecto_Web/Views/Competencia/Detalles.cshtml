@model Proyecto_Web.Models.Competencia

@{
    ViewData["Title"] = "Detalles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Detalles</h2>

<div>
    <h4>Competencia</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.id)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.id)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.nombre)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.nombre)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.fecha)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.fecha)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.hora)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.hora)
        </dd>
        <dt>
            Competidores:
        </dt>

        <dd>
            <center>
                <table class="table table-striped table-hover" id="datatable">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Equipo</th>
                            <th>Puntaje</th>                            
                            <th></th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Nombre</th>
                            <th>Equipo</th>
                            <th>Puntaje</th>
                            <th></th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (Participante item in Model.participantes)
                        {
                            <form asp-action="Registrar" class="form-horizontal">
                                <tr>
                                    <td>
                                        <input hidden type="text" name="idp" value="@Html.DisplayFor(modelItem => item.id)" />
                                        <input hidden type="text" name="idc" value="@Html.DisplayFor(model => Model.id)" />
                                        @Html.DisplayFor(modelItem => item.nombres) @Html.DisplayFor(modelItem => item.apellidom) @Html.DisplayFor(modelItem => item.apellidop)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.equipo.nombre)
                                    </td>
                                    <td>
                                        <input type="number" min="0" step="0.01" value="@Html.DisplayFor(modelItem => item.puntaje)" name="puntaje" />
                                    </td>
                                    <td>
                                        <input type="submit" value="Actualizar" />
                                    </td>
                                </tr>
                                </form>
                                }
</tbody>
                </table>
            </center>
            
            
        </dd>
    </dl>
</div>
<div>    
    <a asp-action="Index">Back to List</a>
</div>
