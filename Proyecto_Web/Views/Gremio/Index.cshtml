@model IEnumerable<Proyecto_Web.Models.Gremio>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Gremio</h2>
<p>
    <a asp-action="Nuevo">Create New</a>
</p>

<p>
    Encontrar por nombre:  <input type="text" id="searchInput" onkeyup="myFunction()" />
</p>    

<table class="table" id="datatable">
    <thead>
        <tr>
            <th>Gremio</th>
            <th>Estado</th>
            <th>Localidad</th>            
            <th></th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <th>Gremio</th>
            <th>Estado</th>
            <th>Localidad</th>
            <th></th>
        </tr>
    </tfoot>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.localidad)
            </td>
            <td>
                @Html.DisplayFor(modeItem =>item.estado.nombre)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { /* id=item.PrimaryKey */ }, new { @class = "btn btn-warning btn-sm" })
                @Html.ActionLink("Detalles", "detallesEquipo", new { item.id }, new { @class = "btn btn-info btn-sm" })
                @Html.ActionLink("Eliminar", "eliminar", new { item.id }, new { @class = "btn btn-danger btn-sm", data_toggle = "confirmation" })                
            </td>
        </tr>
}
    </tbody>
</table>

<div>
    @using (Html.BeginForm("Index", "Administracion"))
    {
        <br />
        <div class="col-lg-10 ">
            <button class="btn btn-default" type="submit">Regresar</button>
        </div>
    }

</div>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
<script src="~/lib/bootstrap-confirmation/bootstrap-confirmation.js"></script>
<script>
    $('[data-toggle=confirmation]').confirmation({
        rootSelector: '[data-toggle=confirmation]',
        container: 'body'
    });
</script>