
@{
    ViewData["Title"] = "Evento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/css/site.css" rel="stylesheet" />
<br />
<h2>@ViewBag.Evento.nombre</h2>
<ul class="nav nav-tabs">
    <li class="nav-item">
        <a class="nav-link active" data-toggle="tab" href="#partidos">Partidos</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="#competencias">Competencias</a>
    </li>
   
    </li>
</ul>
<div id="myTabContent" class="tab-content">
    <div class="tab-pane fade active in" id="partidos">
        @foreach (var Partido in ViewBag.Partidos)
        {
            <div>
                <h4> @Partido.equipo1.nombre VS  @Partido.equipo2.nombre</h4>
                <h5>Disciplina: @Partido.disciplina.nombre</h5>
                <h5>Fecha: @Partido.fecha</h5>
                <h5>Hora: @Partido.hora</h5>
            </div>
            
        }
    
    </div>

    <div class="tab-pane fade" id="competencias">
        <p>@foreach (var Competencias in ViewBag.Competencias)
        {
            <div class="compe">
                <h4> @Competencias.nombre</h4>
                <h5>Fecha: @Competencias.fecha</h5>
                <h5>Hora: @Competencias.hora</h5>
                @foreach (var participante in Competencias.participantes)
                {
                    <h5> @participante.nombres @participante.apellidop  @participante.apellidom  del equipo :@participante.equipo.nombre</h5>
                }

            </div>
        }</p>
    </div>
</div>
